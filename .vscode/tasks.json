{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Docker-Compose: start homeassistant",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "${workspaceFolder}/docker-compose.yml",
                "up",
                "--build",
                "--remove-orphans",
                "home-assistant"
            ]
        }
    ]
}